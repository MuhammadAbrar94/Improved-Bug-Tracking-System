<div class="container">
  <h3>Welcome, <%= current_user.email %>!</h3>
  <p>You are a <%= current_user.role %>.</p>

  <% if current_user.role == "manager" %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="m-0">All Projects</h4>
      <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
    </div>

    <% if current_user.managed_projects.any? %>
      <ul class="list-group">
        <% current_user.managed_projects.each do |project| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to project.title, project_path(project) %>
            <div class="btn-group" role="group">
              <%= link_to "Edit", edit_project_path(project), class: "btn btn-secondary btn-sm" %>
              <%= button_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: "btn btn-danger btn-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>You have not created any projects yet.</p>
    <% end %>

  <% elsif current_user.role == "developer" %>
    <% if current_user.assigned_projects.any? %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0">Assigned Projects</h4>
      </div>

      <ul class="list-group">
        <% current_user.assigned_projects.each do |project| %>
          <li class="list-group-item">
            <%= project.title%>
            <%= link_to "View Bugs", buges_path(project_id: project.id), class: "btn btn-secondary btn-sm" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>You have not been assigned to any projects yet.</p>
    <% end %>

  <% elsif current_user.role == "qa" %>
    <% if current_user.assigned_projects.any? %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0">Assigned Projects</h4>
      </div>

      <ul class="list-group">
        <% current_user.assigned_projects.each do |project| %>
          <li class="list-group-item">
            <%=  project.title %>
            <%= link_to "View & Create Bugs", buges_path(project_id: project.id), class: "btn btn-secondary btn-sm" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>You have not been assigned to any projects yet.</p>
    <% end %>
  <% end %>
</div>
