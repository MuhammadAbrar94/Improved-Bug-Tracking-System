<% if current_user.role == "qa" %>

  <h1 class="text-center mt-5">New Bug</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for(@buge, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :title, class: "col-form-label" %>
          </div>
          <div class="col-md-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Name of bug", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :deadline, class: "col-form-label" %>
          </div>
          <div class="col-md-10">
            <%= f.date_field :deadline, class: "form-control", placeholder: "Enter deadline" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :image, class: "col-form-label" %>
          </div>
          <div class="col-md-10">
            <%= f.file_field :image, class: "form-control-file" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :type_bug, class: "col-form-label" %>
          </div>
          <div class="col-md-10">
            <%= f.select :type_bug, options_for_select([["bug", "bug"], ["feature", "feature"]], selected: @buge.type_bug), {}, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :description, class: "col-form-label" %>
          </div>
          <div class="col-md-10">
            <%= f.text_field :description, class: "form-control", placeholder: "Enter description of bug" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
      <div class="col-md-4 col-md-offset-4 mt-3 text-center">
        [ <%= link_to "Cancel request and return to Bugs listing", buges_path(project_id: @project.id)  %> ]
      </div>
    </div>
  </div>

<% elsif current_user.role == "developer" %>

  <h1 class="text-center mt-5">Edit Bug Status</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for(@buge, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :status, class: "col-form-label" %>
          </div>
          <div class="col-md-10">
            <% if @buge.type_bug == "bug" %>
            <%= f.select :status, options_for_select([["New", "New"], ["Started", "Started"], ["Completed", "Completed"]], selected: @buge.status), {}, class: "form-control" %>
          <% elsif @buge.type_bug == "feature" %>
            <%= f.select :status, options_for_select([["New", "New"], ["Started", "Started"], ["Resolved", "Resolved"]], selected: @buge.status), {}, class: "form-control" %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
    <%= link_to "Cancel and return to buge listing", buges_path(project_id: @project.id), class: "btn btn-secondary" %>

    </div>
  </div>
</div>

<% end %>
