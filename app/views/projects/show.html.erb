<div class="card w-75 mx-auto mt-5" style="max-height: 87vh;">
  <div class="card-body">
    <h2 class="card-title">Project title: <%= @project.title %></h2>
    <p class="card-text">Description: <%= @project.description %></p>
    <small class="text-muted">Created by: <%= @project.user.email %></small>
    <hr>
    <h3 class="card-subtitle mb-2">Assigned to:</h3>
    <ul class="list-group mb-3">
      <% @project.assigns.each do |assign| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= assign.user.email %>
          (<%= assign.user.role.capitalize%>)
          <%= button_to "Delete", assign_path(assign, project_id: @project.id), method: :delete, data: { confirm: "Are you sure you want to delete this assignee?" }, class: "btn btn-sm btn-danger" %>
        </li>
      <% end %>
    </ul>
    <p class="card-text">Created <%= time_ago_in_words(@project.created_at) %> ago</p>
    <%= link_to "Edit project", edit_project_path(@project), class: "btn btn-warning mr-3" %>
    <%= button_to "Delete project", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: "btn btn-danger" %>
    <%= link_to "Return to project listing", projects_path, class: "btn btn-secondary" %>
  </div>
</div>
